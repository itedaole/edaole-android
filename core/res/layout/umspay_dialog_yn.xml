<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/umspay_input_one" >

        <TextView
            android:id="@+id/tv_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:padding="5dip"
            android:text="联网错误，请重试！"
            android:textColor="@color/umspay_text_color" />

        <ImageView
            android:id="@+id/xianxian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tishi"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dip"
            android:scaleType="center"
            android:src="@drawable/umspay_line" />

        <LinearLayout
            android:id="@+id/shuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xianxian"
            android:visibility="visible" >

            <Button
                android:id="@+id/bt_yes"
                android:layout_width="0dp"
                android:layout_height="40dip"
                android:layout_weight="1"
                android:background="@null"
                android:text="确定"
                android:textColor="@color/umspay_text_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/umspay_line_vertical" />

            <Button
                android:id="@+id/bt_no1"
                android:layout_width="0dp"
                android:layout_height="40dip"
                android:layout_weight="1"
                android:background="@null"
                android:text="取消"
                android:textColor="@color/umspay_text_color" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/dan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xianxian"
            android:visibility="gone" >

            <Button
                android:id="@+id/bt_no2"
                android:layout_width="250dip"
                android:layout_height="40dip"
                android:background="@null"
                android:text="確 定"
                android:textColor="@color/umspay_text_color" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>