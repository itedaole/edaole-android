<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.john.groupbuy.DragListView
        android:id="@+id/dragListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_list_view"
        android:divider="@null"
        android:listSelector="@color/transparent"
        android:scrollbars="none" />

    <com.john.groupbuy.LoadingView
        android:id="@+id/loading_view"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/reloaction_bg"
        android:gravity="center_vertical"
        android:alpha="0.5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/reloaction_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/relocation"
            android:src="@drawable/ic_action_refresh" />
    </LinearLayout>

</FrameLayout>