<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/action_bar_title"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="@dimen/abc_action_bar_default_height"
        android:layout_height="@dimen/abc_action_bar_default_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/list_item_bkg"
        android:src="@drawable/abc_ic_search" />

    <Button
        android:id="@+id/city_button"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/search_button"
        android:background="@drawable/list_item_bkg"
        android:minHeight="@dimen/abc_action_bar_default_height"
        android:minWidth="@dimen/abc_action_button_min_width"
        android:text="@string/all"
        android:textColor="@color/white" />

</RelativeLayout>