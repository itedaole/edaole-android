<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
	android:id="@+id/container"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:scrollbarStyle="outsideOverlay"
    android:background="#eeeeee">
	<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--
    <include layout="@layout/titlebar"/>
     -->
    <TextView 
        android:id="@+id/coupon_title_cn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dip"
        android:text="title_CN"
        android:gravity="center"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"/>
    <TextView
        android:id="@+id/coupon_title_local" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dip"
        android:text="title_Local"
        android:gravity="center"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:background="@drawable/shape_couponcode_bg"
        	android:gravity="center"
        	android:orientation="vertical">
            <TextView 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
        	android:text="我的一道乐优惠码"
        	android:gravity="center"
        	android:textSize="16dip"/>
            <TextView 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="My Edaole Code"
        	android:textColor="#b0bec5"
        	android:gravity="center"
        	android:textSize="12dip"/>
            <TextView
            android:id="@+id/coupon_edaole_code" 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="8dp"
        	android:layout_marginBottom="8dp"
        	android:text="1039452"
        	android:textStyle="bold"
        	android:gravity="center"
        	android:textSize="20dip"/>
            <TextView 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="请向商户出示您的优惠码"
        	android:textColor="#b0bec5"
        	android:gravity="center"
        	android:textSize="15dip"/>
            <TextView 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="Bitte buchen Sie den Umsatz auf Edaole"
        	android:gravity="center"
        	android:textSize="12dip"/>
            <TextView 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="mit der o.g. Nummer"
        	android:gravity="center"
        	android:textSize="12dip"/>
            <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerInside"
            android:gravity="center" 
            android:src="@drawable/edaole"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:orientation="vertical">
            <TextView
                android:id="@+id/coupon_shop_name" 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
       		 	android:padding="0dip"
        		android:text="Shop-Name"
        		android:textStyle="bold"
        		android:textSize="14dip"/>
    		<TextView
    		    android:id="@+id/coupon_shop_address" 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:padding="0dip"
        		android:text="Address"
        		android:textSize="14dip"/>
    		<TextView
    		    android:id="@+id/coupon_opening_hours" 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:padding="0dip"
        		android:text="opening hours"
        		android:textSize="14dip"/>
    		<TextView
    		    android:id="@+id/coupon_telephone"  
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:padding="0dip"
        		android:layout_marginBottom="40dp"
        		android:text="telephone"
        		android:textSize="14dip"/>
    		
    		<TextView 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:padding="0dip"
        		android:layout_marginBottom="10dp"
        		android:text="如何使用优惠码"
        		android:textSize="16dip"/>
    		<TextView 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:padding="0dip"
        		android:text="1.在“我的优惠码”中获取优惠码"
        		android:textSize="16dip"/>
    		<TextView 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:padding="0dip"
        		android:text="2.向一道乐商户出示，具体详情规则详见各商户详情"
        		android:textSize="16dip"/>
        </LinearLayout>
    </RelativeLayout>
	</LinearLayout>
</ScrollView> 


