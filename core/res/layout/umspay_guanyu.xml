<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/umspay_bg" >

    <include
        android:id="@+id/re_main_log"
        layout="@layout/umspay_topbar" />

    <LinearLayout
        android:id="@+id/icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_main_log"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/yihebao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="银联商务有限公司（UMS），是中国银联旗下从事银行卡受理市场建设和提供综合支付服务的机构。成立于2012年12月，总部设在上海。"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvzh_icon5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="全民付收银台为银联商务有限公司的手机支付产品，秉承“全民生活快捷付”的产品理念，为用户提供随时随地、安全快捷的支付服务。"
            android:textColor="#666666"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/xianxian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:background="@drawable/umspay_line" />

        <RelativeLayout
            android:id="@+id/re_xian2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <ImageView
                android:id="@+id/iiii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dip"
                android:background="@drawable/umspay_loading_logo" />

            <TextView
                android:id="@+id/cr_tv_banben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iiii"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:text="版本号 V2.0.1"
                android:textColor="#666666"
                android:textSize="13sp" />

            <Button
                android:id="@+id/cr_bt_lianxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cr_tv_banben"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:background="@drawable/umspay_about_tel" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dip"
        android:scaleType="center"
        android:src="@drawable/umspay_text_right" />

</RelativeLayout>