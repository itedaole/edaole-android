<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/category_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_item_size"
        android:layout_marginTop="@dimen/category_item_paddding"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/category_1"
            style="@style/CategoryItem.Blue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/category_item_paddding"
            android:layout_marginRight="@dimen/category_item_paddding"
            android:layout_weight="1" />

        <Button
            android:id="@+id/category_2"
            style="@style/CategoryItem.Green"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/category_item_paddding"
            android:layout_weight="1" />

        <Button
            android:id="@+id/category_3"
            style="@style/CategoryItem.Yellow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/category_item_paddding"
            android:layout_weight="1" />

        <Button
            android:id="@+id/category_4"
            style="@style/CategoryItem.Orange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/category_item_paddding"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_item_size"
        android:layout_marginBottom="@dimen/category_item_paddding"
        android:layout_marginTop="@dimen/category_item_paddding"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/category_5"
            style="@style/CategoryItem.Blue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/category_item_paddding"
            android:layout_marginRight="@dimen/category_item_paddding"
            android:layout_weight="1" />

        <Button
            android:id="@+id/category_6"
            style="@style/CategoryItem.Green"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/category_item_paddding"
            android:layout_weight="1" />

        <Button
            android:id="@+id/category_7"
            style="@style/CategoryItem.Yellow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/category_item_paddding"
            android:layout_weight="1" />

        <Button
            android:id="@+id/category_8"
            style="@style/CategoryItem.Orange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/category_item_paddding"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>