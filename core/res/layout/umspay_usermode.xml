<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/ig_main_log1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/umspay_loading_logo" />

    <RelativeLayout
        android:id="@+id/reshuru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ig_main_log1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/umspay_login_input_up"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scaleType="center"
            android:src="@drawable/umspay_icon_user" />

        <ImageView
            android:id="@+id/user_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/user_icon"
            android:background="@drawable/umspay_line_vertical" />

        <EditText
            android:id="@+id/et_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/user_line"
            android:background="@null"
            android:hint="手机号/邮箱名/用户名"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="18sp" />

             <ImageButton
            android:id="@+id/xx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/umspay_btn_clear" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reshuru"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/umspay_login_input_down"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/mm_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scaleType="center"
            android:src="@drawable/umspay_icon_key" />

        <ImageView
            android:id="@+id/mm_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/mm_icon"
            android:background="@drawable/umspay_line_vertical" />

        <Button
            android:id="@+id/et_mima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/mm_line"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|left"
            android:hint="6-20位密码"
            android:password="true"
            android:singleLine="true"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mima"
        android:layout_alignRight="@+id/mima"
        android:layout_below="@+id/mima" >

        <RelativeLayout
            android:id="@+id/re_log"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip" >

            <CheckBox
                android:id="@+id/ig_input_icon55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/umspay_selector_checkbox"
                android:button="@null" />

            <TextView
                android:id="@+id/et_shuacard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/ig_input_icon55"
                android:hint="记住密码"
                android:textColor="@color/umspay_text_color"
                android:textSize="16sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/ig_btn_icon12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/re_log"
            android:layout_marginTop="15dp"
            android:background="@drawable/umspay_red_btn_bg"
            android:text="登 录"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip" >

        <TextView
            android:id="@+id/login_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册新用户 "
            android:textColor="@color/umspay_text_color" />

        <TextView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/login_regist"
            android:text="|"
            android:textColor="@color/umspay_text_color" />

        <TextView
            android:id="@+id/login_forgetps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/line"
            android:text="忘记密码 "
            android:textColor="@color/umspay_text_color" />
    </RelativeLayout>

</RelativeLayout>