<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/umspay_bg_loading" >

    <RelativeLayout
        android:id="@+id/re_main_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/ig_main_log1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dip"
            android:background="@drawable/umspay_loading_logo" />

        <ImageView
            android:id="@+id/jjyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ig_main_log1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:background="@drawable/umspay_loading_slogan" />

        <TextView
            android:id="@+id/init_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jjyy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:text="初始化请稍候..."
            android:textColor="#88e48252" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip" >

             <LinearLayout
            android:id="@+id/ylian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银联商务有限公司 版权所有"
                android:textSize="16sp"
                android:textColor="@color/umspay_text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本号 V2.0.1"
                android:layout_marginTop="3dp"
                android:textSize="14sp"
                android:textColor="@color/umspay_text_color" />
        </LinearLayout>
        
