<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/wolegecao"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/umspay_input_one" >

        <TextView
            android:id="@+id/tv111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:padding="5dip"
            android:text="请插入您的设备"
            android:textColor="@color/umspay_text_color" />

        <ImageView
            android:id="@+id/xianxian"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@id/tv111"
            android:layout_marginTop="5dip"
            android:background="@color/umspay_text_color" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xianxian"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/bt_no2"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@null"
                android:text="取  消"
                android:textColor="@color/umspay_text_color" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>