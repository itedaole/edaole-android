<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/theme_color</item>
        <item name="android:titleTextStyle">@style/TitleText</item>
    </style>
    
    <style name="TitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="BaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_selector</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title</item>
    </style>

</resources>