<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="text_black">
        <item name="android:textColor">@drawable/default_text_color</item>
    </style>

    <style name="text_black_small" parent="@style/text_black">
        <item name="android:textSize">13.0sp</item>
    </style>

    <style name="search_auto_style" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:popupBackground">@color/transparent</item>
        <item name="android:dropDownVerticalOffset">1.0dip</item>
    </style>

    <style name="city_label">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@drawable/black_white_text_color_selector</item>
    </style>

    <style name="title_divider">
        <item name="android:background">@drawable/divider_title</item>
        <item name="android:layout_height">2.0px</item>
        <item name="android:layout_marginTop">5.0dip</item>
    </style>

    <style name="listViewPriceText">
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="productDetailsPriceText">
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- style of main tabbar -->
    <style name="TabbarItem" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/new_tabbar_bg</item>
        <item name="android:textColor">@drawable/new_tab_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

    <style name="CategoryItem" parent="@android:style/Widget.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">2</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="CategoryItem.Yellow">
        <item name="android:background">@drawable/category_item_yellow</item>
    </style>

    <style name="CategoryItem.Orange">
        <item name="android:background">@drawable/category_item_orange</item>
    </style>

    <style name="CategoryItem.Blue">
        <item name="android:background">@drawable/category_item_blue</item>
    </style>

    <style name="CategoryItem.Green">
        <item name="android:background">@drawable/category_item_green</item>
    </style>

    <!-- style of buttons -->
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
    </style>

